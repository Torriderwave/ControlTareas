@model ControlTareas.Models.ViewModels.TareaVM
@{
    ViewData["Title"] = "Tarea_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oTarea.IdEstado == 0)
{
    <h1>Crear Tarea</h1>
}
else
{
    <h1>Editar Tarea</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Tarea_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oTarea.IdTarea"/>


            <div class="mb-2">
                <label class="form-label" asp-for="oTarea.Fecha">Fecha</label>
                <input class="form-control form-control-sm" asp-for="oTarea.Fecha" type="text"/>

            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oTarea.Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="oTarea.Descripcion" type="text" />

            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="oTarea.IdEstado">Estado</label>
                <select class="form-select form-select-sm" asp-for="oTarea.IdEstado" asp-items="@Model.oListaEstado">
                    <option selected disabled>--  SELECCIONAR --</option>
                </select>

            </div>
            <div class="mb-2">
                @if (Model.oTarea.IdTarea == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-30" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>

